<div class="box-heading">
  Sign in to Mod Picker
</div>

<div class="box-content">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="padded-field">
      <p><%= f.label :username %><br />
      <%= f.text_field :login %></p>
    </div>

    <div class="padded-field">
      <%= f.label :password %> <span class="right-span"><%= link_to "Don't remember?", new_password_path(resource_name) %></span>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if devise_mapping.rememberable? -%>
      <div class="padded-field text-center">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="padded-field text-center big-margin">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <div class="padded-field text-center big-margin">
    New here?  <%= link_to 'Register', new_registration_path(resource_name) %> an account!
  </div>
</div>