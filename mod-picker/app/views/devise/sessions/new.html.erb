<div class="box-heading">
  Login to Mod Picker
</div>

<div class="box-content">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="padded-field">
      <p><%= f.label :login %><br />
      <%= f.text_field :login %></p>
    </div>

    <div class="padded-field">
      <%= f.label :password %> <span class="right-span"><a href="/users/password/new">Don't remember?</a></span>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if devise_mapping.rememberable? -%>
      <div class="padded-field text-center">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="padded-field text-center big-margin">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <div class="padded-field text-center big-margin">
    New here?  <a href="/users/sign_up">Register</a> an account!
  </div>
</div>