<div class="scaffold">
  <p id="notice"><%= notice %></p>

  <h1>mod_comments</h1>

  <table>
    <thead>
      <tr>
          <th>mod_id</th>
          <th>c_id</th>
          <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @mod_comments.each do |mod_comment| %>
        <tr>
            <td><%= mod_comment.mod_id %></td>
            <td><%= mod_comment.c_id %></td>
            <td><%= link_to 'Show', mod_comment %></td>
          <td><%= link_to 'Edit', edit_mod_comment_path(mod_comment) %></td>
          <td><%= link_to 'Destroy', mod_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Mod Comment', new_mod_comment_path %>
</div>