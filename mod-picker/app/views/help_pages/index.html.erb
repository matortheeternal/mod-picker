<% content_for :head do %>
    <title>Mod Picker: Help Center - Index </title>
<% end %>

<div class="landing-page-container">
    <div class="landing-header">
        <h1>Explore our Help Center</h1>
        <h3>All the resources you need to get a Mod List up and running</h3>
    </div>

    <div class="primary-category-container category-container clearfix">
        <ul class="primary-categories-list categories-list">
            <% @categories.each do |category| %>
            <li class="primary-page page">
                <div class="primary-page-content page-content">
                    <a href=<%= "/help/category/#{category[0]}" %>><img src="https://www.placehold.it/500x270" alt="Modding Help pages preview image"></a>
                    <div class="primary-details page-details">
                        <h3>
                            <a href=<%= "/help/category/#{category[0]}" %>><%= category[0].humanize %></a>
                        </h3>
                    </div>
                </div>
            </li>
            <% end %>
        </ul>
    </div>

    <hr style="max-width: 1220px;">

    <div class="games-category-container category-container clearfix">
        <div class="games-category-header">
            <h3>Games</h3>
            <h4>Browse articles related to the games you're interested in modding</h4>
        </div>

        <ul class="games-category-list categories-list">
            <% @games.each do |game| %>
            <% if game.help_pages_count > 0 %>
            <li class="game-page page">
                <div class="game-page-content page-content">
                    <a href=<%= "/help/game/" + game.display_name.parameterize.underscore %>>
                        <img src="<%= game.display_image %>" alt="<%= game.display_name %> help page preview">
                    </a>
                    <div class="game-details">
                        <h3>
                            <a href=<%= "/help/game/#{game.display_name}" %>><%= game.long_name %></a>
                        </h3>
                    </div>
                </div>
            </li>
            <% end %>
            <% end %>
        </ul>
    </div>
</div>
